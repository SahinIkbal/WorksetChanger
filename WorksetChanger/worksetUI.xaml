<Window x:Class="WorksetChanger.worksetUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WorksetChanger"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Content="Choose Category" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
        <Label Content="Choose Workset" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>

        <ComboBox Name="cmb1" Grid.Row="1" MaxHeight="20"/>
        <ComboBox Name="cmb2" Grid.Row="1" MaxHeight="20" Grid.Column="2"/>
        <Button x:Name="btn1" Content="OK" MaxHeight="70" MaxWidth="250" Click="btn1_Click" Grid.Row="3" Grid.Column="1"></Button>
    </Grid>
</Window>
